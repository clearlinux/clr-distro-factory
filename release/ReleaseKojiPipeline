pipeline {
    agent { label 'clr-builders' }

    environment {
        NAMESPACE = "${JOB_NAME}"
        WORK_DIR = "${WORKSPACE}/work"
    }

    stages {
        stage('Initialize Environment') {
            steps {
                sh 'release/init-env.sh'
            }
        }
        stage('Setup Content') {
            steps {
                sh 'release/koji.sh'
                sh 'release/content.sh'
            }
        }
        stage('Create Update Stream') {
            steps {
                sh 'release/mixer.sh'
            }
        }
        stage('Create Images') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh 'release/images.sh'
                }
            }
        }
        stage('Stage') {
            steps {
                sh 'release/license_info.sh'
                sh 'release/release_notes.sh'
                sh 'release/stage.sh'
            }
        }
        stage('Publish') {
            steps {
                sh 'release/publish.sh'
            }
        }
    }

    post {
        always {
            echo "Release Pipeline OUT - ${env.BUILD_TAG}"
        }
    }
}
